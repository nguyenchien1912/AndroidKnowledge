<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/loaitaikhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:text="Loại tài khoản"
        android:textColor="#000"
        android:textSize="23sp" />

    <Spinner
        android:id="@+id/spinner_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/loaitaikhoan" />
    <Button
        android:id="@+id/add_account"
        android:text="add"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/note_account"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/pass_account"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#2196F3"
        android:layout_below="@+id/user_account"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/user_account"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Username"
        android:textColorHint="#2196F3"
        android:layout_below="@+id/loaitaikhoan"
        android:layout_marginTop="20dp" />
    <EditText
        android:id="@+id/note_account"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColorHint="#E91E63"
        android:hint="Ghi chú về tài khoản"
        android:layout_below="@+id/pass_account"
        android:layout_marginTop="20dp" />
    <ListView
        android:id="@+id/lv_account"
        android:layout_below="@+id/add_account"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>